function makeGreeting(name) {
    return `Hello, my name is ${name}!`;
  }
  
  const name = "Miriam";
  const greeting = makeGreeting(name);
  console.log(greeting);
  // "Hello, my name is Miriam!"



//Synchronous
  function youWantPizzaSynchronous() {
    console.log("waiting for pizza ...");

    // You (the program) wait in the kitchen until the pizza are ready 
    bakePizzaSynchronous();

    console.log("Doing other things after getting pizza...");
    timeloop();
    console.log("Pizza are done ")
  }

  // A time loop for baking the pizza
  function timeLoop() {
    for(let i = 0; i < 12; i++) {
      //Your code for each 'minute' goes here 
      console.log( '$(i +1) minutes has passed.');

    //Introduce a delay (in this case, using a busy wait )
    const startTime = new Date().getTime();
    while (new Date().getTime() - startTime < 5000) {
    // Busy wait for 5000 milliseconds (5 seconds)

 }
 }
}
